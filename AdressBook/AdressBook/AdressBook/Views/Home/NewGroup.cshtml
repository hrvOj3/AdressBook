@{
    ViewBag.Title = "Add New Group";
}

<div class="jumbotron">
    <h1>Add new contactGroup</h1>
</div>
<div>
    <form>
        <div class="form-group row">
            <label for="contactGroup-name" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" required class="form-control form-control-lg" id="contactGroup-name" placeholder="Football">
            </div>
        </div>
        <div class="form-group row">
            <label for="contactGroup-description" class="col-sm-2 col-form-label">Description:</label>
            <div class="col-sm-10">
                <input type="text" required class="form-control form-control-lg" id="contactGroup-description" placeholder="Sunday football company">
            </div>
        </div>
    </form>
    <div>
        <button type="button" class="btn btn-warning btn-sm" onclick="navigateToHomePage()">Cancle</button>
        <button type="submit" class="btn btn-primary btn-sm" onclick="fromValidation()">Save contact group</button>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Controllers/ContactGroupController.js"></script>
<script type="text/javascript">

    function navigateToHomePage() {
        window.location.href = "/home";
    }

    function fromValidation() {
        var tile = document.getElementById("contactGroup-name").value;
        if (tile == "" || tile == null) {
            alert("Contact group name must be filled");
        } 
        //else {
        //    ContactController.updateOrInsertContact();
        //}
    }

    runWhenReady();

</script>
